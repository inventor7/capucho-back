              "mode": "raw",
              "raw": "{\n  \"event\": \"downloaded\",\n  \"platform\": \"{{platform}}\",\n  \"device_id\": \"{{deviceId}}\",\n  \"current_version_code\": 1,\n  \"new_version\": \"{{version}}\",\n  \"new_version_code\": 2,\n  \"channel\": \"{{channel}}\",\n  \"environment\": \"{{environment}}\"\n}"
