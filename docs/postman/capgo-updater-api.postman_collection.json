          "name": "Upload Native Update File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "/path/to/app.apk" },
                { "key": "version", "value": "{{version}}", "type": "text" },
                { "key": "version_code", "value": "2", "type": "text" },
                { "key": "platform", "value": "{{platform}}", "type": "text" },
                {
                  "key": "channel",
                  "value": "{{channel}}",
                  "type": "text",
                  "disabled": true
                },
                {
                  "key": "environment",
                  "value": "{{environment}}",
                  "type": "text",
                  "disabled": true
                },
                {
                  "key": "required",
                  "value": "false",
                  "type": "text",
                  "disabled": true
                },
                {
                  "key": "release_notes",
                  "value": "Release notes here",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/native-upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "native-upload"]
            },
